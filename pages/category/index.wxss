page {
  height: 100%;
}

.cates {
  height: 100%;
}

.cates .cates_container {
  height: calc(100% - 90rpx);
  display: flex;
}

.cates .cates_container .left_menu {
  flex: 2;
}

.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 1rpx solid #d3d3d3;
}

.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-right: 10rpx solid var(--themeColor);
}

.cates .cates_container .right_cantent {
  border-left: 2rpx solid var(--themeColor);
  border-right: 2rpx solid var(--themeColor);
  text-align: center;
  flex: 5;
}

.cates .cates_container .right_cantent .goods_titel {
  border-top: 2rpx solid var(--themeColor);
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid var(--themeColor);
}

.cates .cates_container .right_cantent .goods_list {
  display: flex;
  flex-wrap: wrap;
}

.cates .cates_container .right_cantent .goods_list navigator {
  width: 33.33%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.cates .cates_container .right_cantent .goods_list navigator image {
  width: 50%;
}
