/* pages/search/index.wxss */
page {
  background-color: #dedede;
  padding: 20rpx;
}

.search_row {
  display: flex;
  height: 60rpx;
}

.search_row input {
  background-color: #fff;
  flex: 10;
  height: 100%;
  margin-right: 10rpx;
  padding: 0 30rpx;
}

.search_row button {
  flex: 2;
  width: 80rpx;
  height: 100%;
  font-size: 30rpx;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_content {
  margin-top: 20rpx;
}

.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
